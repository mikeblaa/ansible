[Unit]
Description=Share
Requires=NetworkManager-wait-online.service
After=NetworkManager-wait-online.service

[Mount]
What=//files.maballou.com/share
Where=/mnt/share
Type=cifs
Options=vers=3.0,username={{ cifs_username }},password={{ cifs_password }},uid=mike,gid=users

[Install]
WantedBy=multi-user.target
